<div class="panel panel-default grid">
          <div class="panel-heading">
            <i class="icon-table icon-large"></i>
            Tasks Table
          </div>
          <div class="panel-body">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>#</th>
                  <th>User Name</th>
                  <th>Tasks</th>
                  <th>Done</th>
                </tr>
              </thead>
              <tbody>
                <% @tasks.each_with_index do |t, i| %>
                  <tr>
                    <td><%= i + 1 %></td>
                    <td><%= t.user.name %></td>
                    <td><%= t.name %></td>
                    <td>  <%= t.done %>
                    </td>
                  </tr>
                <%end %>
              </tbody>
            </table>
          </div>
        </div>
