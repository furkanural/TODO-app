#navbar.navbar.navbar-default
  %a.navbar-brand{:href => hq_root_path}
    %i.icon-beer
    Hierapolis
  %ul.nav.navbar-nav.pull-right
    %li.dropdown
      %a.dropdown-toggle{data: {toggle: 'dropdown'}, :href => '#'}
        %i.icon-envelope
        Messages
        %span.badge 5
        %b.caret
      %ul.dropdown-menu
        %li
          %a{:href => '#'} New message
        %li
          %a{:href => '#'} Inbox
        %li
          %a{:href => '#'} Out box
        %li
          %a{:href => '#'} Trash
    %li
      %a{href: '#'}
        %i.icon-cog
        = t('navbar.settings')
    %li.dropdown.user
      %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
        %i.icon-user
        %strong
          = current_admin.email
        =image_tag 'http://lorempixel.com/output/fashion-q-c-20-20-4.jpg', width: '20px', height: '20px', class: 'img-rounded'
        %b.caret
      %ul.dropdown-menu
        %li
          =link_to t('navbar.edit_profile'), edit_hq_admin_profile_path
        %li.divider
        %li
          =link_to t('navbar.signout'), destroy_admin_session_path, method: :delete
